{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@protocols/*": ["protocols/*"]
    }
  },
  "include": [
    "core",
    "protocols",
    "adapters"
  ],
  "exclude": [
    "node_modules"
  ]
}
